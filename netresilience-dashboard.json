{
  "id": null,
  "uid": "net-resilience-hosts",
  "title": "Network Resilience Dashboard (Per Host)",
  "tags": ["network", "resilience", "azure"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 2,
  "refresh": "30s",
  "templating": {
    "list": [
      {
        "name": "VmInstance",
        "label": "Host",
        "type": "query",
        "datasource": {
          "type": "grafana-azure-monitor-datasource",
          "uid": "azure-monitor"
        },
        "query": "NetworkResilience_CL | distinct VmInstance",
        "refresh": 2,
        "includeAll": true,
        "multi": true,
        "allValue": "*"
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Success Rate by Host / Protocol / Zone",
      "datasource": {
        "type": "grafana-azure-monitor-datasource",
        "uid": "azure-monitor"
      },
      "targets": [
        {
          "queryType": "Azure Monitor Logs",
          "refId": "A",
          "query": "NetworkResilience_CL\n| where VmInstance in (${VmInstance:csv})\n| summarize SuccessRate = 100.0 * avg(tobool(Success)) by VmInstance, AzLocation, AzZone, Protocol, bin(TimeGenerated, 5m)\n| order by TimeGenerated asc"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": { "mode": "palette-classic" }
        }
      },
      "options": {
        "legend": { "showLegend": true },
        "tooltip": { "mode": "multi" }
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "Latency Percentiles (p50, p95) by Host / Target",
      "datasource": {
        "type": "grafana-azure-monitor-datasource",
        "uid": "azure-monitor"
      },
      "targets": [
        {
          "queryType": "Azure Monitor Logs",
          "refId": "B",
          "query": "NetworkResilience_CL\n| where VmInstance in (${VmInstance:csv}) and Success == true and isnotempty(LatencyMs)\n| summarize p50 = percentile(LatencyMs, 50), p95 = percentile(LatencyMs, 95) by VmInstance, Target, Protocol, bin(TimeGenerated, 15m)\n| order by TimeGenerated asc"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "color": { "mode": "palette-classic" }
        }
      },
      "options": {
        "legend": { "showLegend": true },
        "tooltip": { "mode": "multi" }
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 }
    },
    {
      "type": "table",
      "title": "Error Breakdown by Host",
      "datasource": {
        "type": "grafana-azure-monitor-datasource",
        "uid": "azure-monitor"
      },
      "targets": [
        {
          "queryType": "Azure Monitor Logs",
          "refId": "C",
          "query": "NetworkResilience_CL\n| where VmInstance in (${VmInstance:csv}) and Success == false\n| summarize Failures = count() by VmInstance, Target, Protocol, StatusCode, Error, bin(TimeGenerated, 30m)\n| order by Failures desc"
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [{ "displayName": "Failures", "desc": true }]
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 }
    }
  ]
}
